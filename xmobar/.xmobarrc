Config { overrideRedirect = False
       , font     = "mononoki Bold 9"
       , additionalFonts  = ["xft:FontAwesome-9"]
       , bgColor  = "#121212"
       , alpha = 0
       , fgColor  = "#f8f8f2"
       , position = Top
       , commands = [ Run Alsa "default" "Master"
                        [ "--template", "<volumestatus>"
                        , "--suffix"  , "True"
                        , "--"
                        , "--on", ""
                        ]
                    , Run Date "%a %Y-%m-%d <fc=#8be9fd>%l:%M:%S %p</fc>" "date" 10
                    , Run Battery        [
                    "-t", "bat: <acstatus>(<left>%)",
                    "-L", "10", "-H", "80", "-p", "3",
                    "--", "-O", "<fc=green>On</fc> - ", "-i", "",
                    "-L", "-15", "-H", "-5",
                    "-l", "red", "-m", "blue", "-h", "green",
                    "-a", "notify-send -u critical 'Battery running out!!'",
                    "-A", "3"
                             ] 10
                    , Run XMonadLog
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% } %date% { sound: %alsa:default:Master% | %battery% "
       }
